{
    "compilerOptions": {
      "target": "ES2017",
      "module": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "lib": ["DOM", "ESNext"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  